<resources>

    <style name="FrameworkRoot.Theme" parent="Theme.AppCompat.Light"/>

    <style name="Theme" parent="FrameworkRoot.Theme"/>

    <style name="Theme.Lifehack.Base" parent="Theme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="dateViewStyle">@style/DateViewStyle</item>
        <item name="colorButtonNormal">@color/mainColorBlue</item>
    </style>

    <style name="Theme.Lifehack" parent="Theme.Lifehack.Base"/>

    <style name="Theme.Lifehack.Launch" parent="Theme.Lifehack">
        <item name="android:windowBackground">@drawable/background_launch</item>
    </style>

    <style name="Theme.Lifehack.ExchangeRates" parent="Theme.Lifehack.TranslucentStatus"/>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="DateViewStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">left</item>
        <item name="android:drawableLeft">@drawable/ic_calendar_black_24dp</item>
        <item name="android:textColor">#ff333333</item>
    </style>

</resources>
