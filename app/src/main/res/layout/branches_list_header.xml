<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#808080"
    android:orientation="horizontal"
    android:padding="1dp"
    android:weightSum="100"
    >

  <md.fusionworks.lifehack.widget.TypefaceTextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="25"
      android:background="#a5d1f4"
      android:gravity="center"
      android:padding="8dp"
      android:singleLine="false"
      android:text="@string/branch"
      android:textColor="#666"
      android:textSize="10dp"
      view:typeface="font/Roboto-Regular.ttf"
      />

  <md.fusionworks.lifehack.widget.TypefaceTextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="1dp"
      android:layout_weight="25"
      android:background="#a5d1f4"
      android:gravity="center"
      android:padding="8dp"
      android:singleLine="false"
      android:text="@string/address"
      android:textColor="#666"
      android:textSize="10dp"
      view:typeface="font/Roboto-Regular.ttf"
      />

  <md.fusionworks.lifehack.widget.TypefaceTextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="1dp"
      android:layout_weight="25"
      android:background="#a5d1f4"
      android:gravity="center"
      android:padding="8dp"
      android:singleLine="false"
      android:text="@string/work_schedule"
      android:textColor="#666"
      android:textSize="10dp"
      view:typeface="font/Roboto-Regular.ttf"
      />

  <md.fusionworks.lifehack.widget.TypefaceTextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="1dp"
      android:layout_weight="25"
      android:background="#a5d1f4"
      android:gravity="center"
      android:padding="8dp"
      android:singleLine="false"
      android:text="@string/time_until_closing"
      android:textColor="#666"
      android:textSize="10dp"
      view:typeface="font/Roboto-Regular.ttf"
      />
</LinearLayout>