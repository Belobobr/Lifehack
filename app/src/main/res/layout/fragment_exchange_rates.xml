<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    >

  <md.fusionworks.lifehack.ui.widget.RetryView
      android:id="@+id/retryView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      view:message="@string/error_load_rates"
      />

  <LinearLayout
      android:id="@+id/exchangeRatesView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="gone"
      tools:context=".exchange_rates.ExchangeRatesFragment"
      >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        view:cardBackgroundColor="@color/white"
        view:cardCornerRadius="0dp"
        view:cardUseCompatPadding="true"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingBottom="16dp"
          android:paddingLeft="16dp"
          android:paddingRight="16dp"
          android:paddingTop="16dp"
          >
        <md.fusionworks.lifehack.ui.widget.TypefaceEditText
            android:id="@+id/amountInField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/amount_field_background"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:selectAllOnFocus="true"
            android:textColor="#999"
            android:textSize="16sp"
            view:typeface="font/Roboto-Bold.ttf"
            />

        <md.fusionworks.lifehack.ui.widget.CurrenciesGroup
            android:id="@+id/currenciesInGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="100"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="="
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            />

        <md.fusionworks.lifehack.ui.widget.TypefaceEditText
            android:id="@+id/amountOutField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/amount_field_background"
            android:enabled="false"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="#999"
            android:textSize="16sp"
            view:typeface="font/Roboto-Bold.ttf"
            />

        <md.fusionworks.lifehack.ui.widget.CurrenciesGroup
            android:id="@+id/currenciesOutGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="100"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/whereToBuyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-6dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:layout_marginTop="-6dp"
            android:text="@string/where_to_change"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            view:typeface="font/Roboto-Regular.ttf"
            />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/onlyActiveNowCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-6dp"
            android:layout_marginTop="8dp"
            android:text="@string/only_opened_now"
            android:textSize="@dimen/text_size_medium"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100"
            >

          <md.fusionworks.lifehack.ui.widget.DateView
              android:id="@+id/ratesDateField"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="50"
              />

          <Spinner
              android:id="@+id/bankSpinner"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_weight="50"
              android:background="@drawable/bg_bank_spinner"
              android:paddingBottom="12dp"
              android:paddingRight="12dp"
              android:paddingTop="12dp"
              />
        </LinearLayout>

        <md.fusionworks.lifehack.ui.widget.TypefaceTextView
            android:id="@+id/bestExchangeBankField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:visibility="gone"
            view:typeface="font/Roboto-Regular.ttf"
            />
      </LinearLayout>
    </android.support.v7.widget.CardView>

  </LinearLayout>
</LinearLayout>