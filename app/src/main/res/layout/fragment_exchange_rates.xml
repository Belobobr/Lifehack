<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:padding="16dp"
              tools:context="md.fusionworks.lifehack.ui.fragment.ExchangeRatesFragment">

    <md.fusionworks.lifehack.ui.widget.TypefaceEditText
        android:id="@+id/amountInField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/amount_field_background"
        android:gravity="right"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:textColor="#999"
        android:textSize="@dimen/text_size_medium"
        view:typeface="font/Roboto-Regular.ttf"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="100"
        >

        <md.fusionworks.lifehack.ui.widget.CurrencyView
            android:id="@+id/currencyInMdlView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="MDL"
            view:typeface="font/Roboto-Regular.ttf"
            />

        <md.fusionworks.lifehack.ui.widget.CurrencyView
            android:id="@+id/currencyInEurView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="20"
            android:text="EUR"
            view:typeface="font/Roboto-Regular.ttf"
            />

        <md.fusionworks.lifehack.ui.widget.CurrencyView
            android:id="@+id/currencyInUsdView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="20"
            android:text="USD"
            view:typeface="font/Roboto-Regular.ttf"
            />

        <md.fusionworks.lifehack.ui.widget.CurrencyView
            android:id="@+id/currencyInRonView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="20"
            android:text="RON"
            view:typeface="font/Roboto-Regular.ttf"
            />

        <md.fusionworks.lifehack.ui.widget.CurrencyView
            android:id="@+id/currencyInRubView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="20"
            android:text="RUB"
            view:typeface="font/Roboto-Regular.ttf"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="="
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        />

    <md.fusionworks.lifehack.ui.widget.TypefaceEditText
        android:id="@+id/amountOutField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/amount_field_background"
        android:enabled="false"
        android:gravity="right"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:textColor="#999"
        android:textSize="@dimen/text_size_medium"
        view:typeface="font/Roboto-Regular.ttf"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="100"
        >

        <md.fusionworks.lifehack.ui.widget.CurrencyView
            android:id="@+id/currencyOutMdlView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="MDL"
            view:typeface="font/Roboto-Regular.ttf"
            />

        <md.fusionworks.lifehack.ui.widget.CurrencyView
            android:id="@+id/currencyOutEurView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="20"
            android:text="EUR"
            view:typeface="font/Roboto-Regular.ttf"
            />

        <md.fusionworks.lifehack.ui.widget.CurrencyView
            android:id="@+id/currencyOutUsdView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="20"
            android:text="USD"
            view:typeface="font/Roboto-Regular.ttf"
            />

        <md.fusionworks.lifehack.ui.widget.CurrencyView
            android:id="@+id/currencyOutRonView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="20"
            android:text="RON"
            view:typeface="font/Roboto-Regular.ttf"
            />

        <md.fusionworks.lifehack.ui.widget.CurrencyView
            android:id="@+id/currencyOutRubView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="20"
            android:text="RUB"
            view:typeface="font/Roboto-Regular.ttf"
            />
    </LinearLayout>

    <Spinner
        android:id="@+id/bankSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <md.fusionworks.lifehack.ui.widget.TypefaceTextView
        android:id="@+id/bestExchangeBankField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <md.fusionworks.lifehack.ui.widget.DateView
        android:id="@+id/ratesDateField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <md.fusionworks.lifehack.ui.widget.CurrencyRadioGroup
        android:id="@+id/currencyInRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"/>

    <md.fusionworks.lifehack.ui.widget.CurrencyRadioGroup
        android:id="@+id/currencyOutRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"/>
</LinearLayout>
