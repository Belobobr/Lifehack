<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_sale_product"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="8dp"
    style="@style/TaxiPhoneNumberStyle"
    >
  <ImageView
      android:layout_width="50dp"
      android:layout_height="80dp"
      android:layout_marginLeft="8dp"
      android:scaleType="fitXY"
      android:src="@drawable/movie_poster"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_weight="1"
      android:orientation="vertical"
      >
    <md.fusionworks.lifehack.view.widget.TypefaceTextView
        android:id="@+id/nameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="-5dp"
        android:gravity="left"
        android:text="Batman v Superman"
        android:textColor="@color/navdrawer_background"
        android:textSize="16sp"
        view:typeface="font/Roboto-Regular.ttf"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="horizontal"
        >
      <md.fusionworks.lifehack.view.widget.TypefaceTextView
          android:id="@+id/prevPriceField"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_disabled"
          android:textSize="13sp"
          android:text="Сеансы:"
          view:typeface="font/Roboto-Regular.ttf"
          />

      <md.fusionworks.lifehack.view.widget.TypefaceTextView
          android:id="@+id/minPriceField"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:textColor="@color/colorPrimary"
          android:textSize="16sp"
          android:text="13:30	/ 20:30	/ 22:10"
          view:typeface="font/Roboto-Regular.ttf"
          />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>