<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#808080"
    android:orientation="horizontal"
    android:paddingBottom="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:weightSum="100"
    >

  <md.fusionworks.lifehack.ui.widget.TypefaceTextView
      android:id="@+id/nameField"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="30"
      android:background="@drawable/bg_branch_list_item_name"
      android:clickable="true"
      android:gravity="center"
      android:padding="8dp"
      android:singleLine="false"
      android:textColor="#52A7EA"
      android:textSize="10dp"
      view:typeface="font/Roboto-Regular.ttf"
      />

  <md.fusionworks.lifehack.ui.widget.TypefaceTextView
      android:id="@+id/addressField"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="1dp"
      android:layout_weight="25"
      android:background="@color/white"
      android:gravity="center"
      android:padding="8dp"
      android:singleLine="false"
      android:textColor="#999"
      android:textSize="10dp"
      view:typeface="font/Roboto-Regular.ttf"
      />

  <md.fusionworks.lifehack.ui.widget.TypefaceTextView
      android:id="@+id/scheduleField"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="1dp"
      android:layout_weight="25"
      android:background="@color/white"
      android:gravity="center"
      android:padding="8dp"
      android:singleLine="false"
      android:textColor="#999"
      android:textSize="10dp"
      view:typeface="font/Roboto-Regular.ttf"
      />

  <md.fusionworks.lifehack.ui.widget.TypefaceTextView
      android:id="@+id/workField"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="1dp"
      android:layout_weight="20"
      android:background="@color/white"
      android:gravity="center"
      android:padding="8dp"
      android:singleLine="false"
      android:textColor="#999"
      android:textSize="10dp"
      view:typeface="font/Roboto-Regular.ttf"
      />
</LinearLayout>